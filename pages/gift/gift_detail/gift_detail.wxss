@import '/pages/shoper/shoper_detail/shoper_detail'; 
.choose_size_box{
  width:100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #FF588A;
  color:#fff;
  text-align: center;
  font-size: 32rpx;
  position: fixed;
  bottom:0;
  left:0;
}
.size_sure_box{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
}
.size_sure_list{
  width:50%;
  background: #CC9E3D;
  text-align: center;
  color:#fff;
}
.size_sure_list:nth-child(2){
  background: #FF2063;
}
.no_choose_size{
  width:100%;
  height: 75rpx;
  line-height: 75rpx;
  padding-left:60rpx;
  font-size: 24rpx;
  color:#CC9E3D;
  position: fixed;
  bottom:100rpx;
  left:0;
  background: #F9F5EC;
}
