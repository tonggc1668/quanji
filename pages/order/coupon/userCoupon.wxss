.shopdetail-icon {
  display: blcok;
  width: 160rpx;
  height: 160rpx;
  margin: 30rpx 20rpx;
  float: left;
}

.shopdetail-info {
  float: left;
  height: 100%;
  width: 490rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
}

.info-title {
  color: #333;
  font-size: 28rpx;
  width: 440rpx;
  height: 80rpx;
  
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info-type {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #fc0327;
  border: 1px solid #fc0327;
  border-radius: 2px;
  width: 72rpx;
  height: 32rpx;
  line-height: 30rpx;
  text-align: center;
  font-weight: lighter;
}

.price-container {
  width: 200 rpx;
  margin-top: 4rpx;
  height: 45rpx;
}

.true-price, .origin-price {
  float: left;
  line-height: 45rpx;
}

.true-price {
  font-size: 32rpx;
  color: #fc0327;
}

.origin-price {
  text-decoration: line-through;
  font-size: 24rpx;
  color: #a6a6a6;
  margin-left: 10rpx;
}

.goto-productDetail {
  float: right;
  font-size: 28rpx;
  color: #ff3670;
  border: 1px solid #ff3670;
  border-radius: 2px;
  width: 198rpx;
  height: 60rpx;
  margin-right: -10rpx;
  text-align: center;
  line-height: 60rpx;
}

/* 活动说明  */

.bottom-container {
  width: 710rpx;
  height: 585rpx;
  background-color: white;
  border-radius: 4rpx;
  margin: 20rpx auto;
  overflow: hidden;
}

.title-container {
  width: 200rpx;
  height: 45rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.activity-description {
  margin-top: 30rpx;
  margin-left: 20rpx;
  width: 670rpx;
  font-size: 28rpx;
  /* letter-spacing: 1rpx; */
  line-height: 40rpx;
}

.point-image {
  display: block;
  margin-left: 5rpx;
  width: 16rpx;
  height: 16rpx;
  float: left;
  margin-top: 14rpx;
}

.title-word {
  width: 128rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  float: left;
  margin-left: 15rpx;
  margin-right: 15rpx;
  text-align: center;
}
