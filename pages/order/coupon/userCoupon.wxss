.container {
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#fc0327), to(#ce0a27));
  width: 100%;
  height: 1334rpx;
  padding-top: 20rpx;
}

view {
  color: #333;
  font-size: 28rpx;
}

/* 优惠券  */

.top-container {
  width: 710rpx;
  height: 250rpx;
  margin: 0 auto;
  border-radius: 4rpx;
}

.top-left {
  float: left;
  width: 460rpx;
  height: 100%;
  padding: 20rpx;
}

.left-title {
  margin-bottom: 10rpx;
}

.left-price {
  width: 150rpx;
  height: 112rpx;
  font-size: 50rpx;
  color: #fc0327;
  font-weight: bold;
  line-height: 112rpx;
}

.left-line {
  margin-top: 10rpx;
  border: 1rpx dashed #d9d9d9;
}

.left-limit {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #a6a6a6;
}

.top-right {
  float: left;
  width: 250rpx;
  height: 100%;
  line-height: 250rpx;
  font-size: 40rpx;
  /* color: white; */
  font-weight: bold;
  padding-left: 50rpx;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}

.couponStatusNot {
  background-color: #ffc8c6;
  color: #fc0327;
}

.couponStatusHad {
  background-color: #f6f5f5;
  color: #333;
}

/* 商品详情  */

.middle-container {
  width: 710rpx;
  height: 220rpx;
  background-color: white;
  border-radius: 4rpx;
  margin: 20rpx auto;
}

