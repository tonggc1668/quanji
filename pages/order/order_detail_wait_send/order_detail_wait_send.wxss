page {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.order_detail_wait_pay {
  width: 100%;
  height: auto;
}

.wait_pay_box {
  width: 100%;
  height: 160rpx;
  background: #ff2063;
  display: flex;
  justify-content: space-between;
}

.icon {
  float: left;
  margin-top: 20rpx;
  height: 56rpx;
  display: flex;
  line-height: 56rpx;
  margin-left: 40rpx;
}

.wait_for_pay_title {
  color: #fff;
  display: block;
  font-size: 32rpx;
  margin-left: 15rpx;
}

.wait_for_img {
  width: 56rpx;
  height: 56rpx;
  display: block;
}

.wait_for_cancel {
  height: 100%;
  font-size: 24rpx;
  color: #fff;
  margin-right: 40rpx;
  margin-top: 35rpx;
}

.wait_for_img>image {
  display: block;
  width: 100%;
  height: 100%;
}

.user_address {
  width: 670rpx;
  margin: 0 auto;
  margin-top: -50rpx;
  border-radius: 20rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  background: #fff;
  display: flex;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
}

.user_img {
  width: 18rpx;
  height: 26rpx;
  margin-left: 32rpx;
  margin-top: 5rpx;
}

.user_car {
  width: 26rpx;
  height: 23rpx;
  margin-left: 32rpx;
}

.user_img>image {
  display: block;
  width: 18rpx;
  height: 26rpx;
  margin-top: 20rpx;
}

.user_address_detail {
  margin-left: 18rpx;
  width: 600rpx;
}

.user_name_phone {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
}

.user_name_phone text {
  font: 28rpx;
  color: #333;
  font-weight: bold;
}

.user_name_phone text:nth-child(2) {
  margin-left: 20rpx;
}

.user_address_con {
  width: 100%;
  font-size: 24rpx;
  color: #737373;
  /* height: 33rpx; */
  line-height: 33rpx;
  margin-top: 8rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden; */
}

/* 订单详情 */

.order_detail_box {
  width: 100%;
  padding-top: 20rpx;
  height: 260rpx;
  overflow: hidden;
  border-bottom: 10px solid #f2f2f2;
  background-color: white;
}

.order_product_img {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  margin-top: 50rpx;
  float: left;
}

.order_product_img>image {
  width: 100%;
  height: 100%;
  display: block;
}

.order_product_detail {
  width: 550rpx;
  height: 210rpx;
  margin-left: 20rpx;
  flex-direction: column;
  float: right;
}

.root {
  background-color: #fff;
}

.order_product_title {
  padding-top: 15rpx;
  width: 550rpx;
  height: 100rpx;
}

.order_detail_size {
  width: 100%;
  height: 33rpx;
  line-height: 33rpx;
  margin-top: 8rpx;
}

.order_detail_size>text {
  font-size: 24rpx;
  color: #a6a6a6;
}

.order_product_price {
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  justify-content: space-between;
  margin-top: 8rpx;
}

.order_product_price_box {
  color: #fc0327;
}

.order_product_num {
  font-size: 24rpx;
  color: #737373;
}

.order_price_box {
  width: 100%;
  height: 225rpx;
  background: #fff;
  border-bottom: 10px solid #f2f2f2;
  margin-top: 20rpx;
}

.order_price_prev {
  width: 710rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding-top: 10rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}

.order_price_prev:nth-child(2) {
  padding-top: 0;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.order_price_prev:nth-child(3) .order_price_right {
  color: #fc0327;
}

.order_time {
  width: 100%;
  height: 130rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.order_time_box {
  width: 100%;
  height: 65rpx;
  padding-top: 10rpx;
  line-height: 55rpx;
}

.order_time_box text {
  color: #cac9ce;
}

.order_time_box text:nth-child(2) {
  margin-left: 20rpx;
}

.order_number {
  width: 100%;
  height: 65rpx;
  padding-bottom: 10rpx;
  line-height: 55rpx;
  position: relative;
}

.order_number text {
  color: #cac9ce;
}

.order_number text:nth-child(2) {
  margin-left: 20rpx;
}

.copy_order {
  width: 88rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 1rpx solid #cac9ce;
  font-size: 24rpx;
  color: #cac9ce;
  text-align: center;
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
  border-radius: 20px;
}

.go_to_pay {
  width: 100%;
  height: 98rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

.pay_button {
  width: 136rpx;
  height: 54rpx;
  line-height: 52rpx;
  border: 10px solid #fc0327;
  box-sizing: border-box;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  border-radius: 27rpx;
  color: #fc0327;
  text-align: center;
  font-size: 24rpx;
  background: #fff;
}

.view_two_text {
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 400rpx;
  line-height: 40rpx;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  float: left;
}

.view_price {
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  float: right;
  margin-right: 20rpx;
}

.view_two_type_text {
  font-size: 24rpx;
  color: #cac9ce;
  margin-top: 10rpx;
  float: left;
  width: 400rpx;
}

.view_num {
  font-size: 28rpx;
  color: #cac9ce;
  float: right;
  margin-right: 22rpx;
  margin-top: 10rpx;
}

.bottomInfo {
  margin: 0rpx 62rpx;
  font-size: 20rpx;
  color: #333;
}

.address {
  float: left;
  /* width: 60rpx; */
  line-height: 35rpx;
  text-align: left;
  height: auto;
  font-size: 28rpx;
  color: #333;
}

.addressInfo {
  float: left;
  line-height: 35rpx;
  text-align: left;
  width: 432rpx;
  padding-bottom: 15rpx;
  font-size: 28rpx;
  color: #333;
}
