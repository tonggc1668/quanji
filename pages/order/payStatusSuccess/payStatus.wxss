page {
  width: 100%;
  height: 100%;
  background-color: #ededed;
}

.container {
}

/* 支付状态  */

.top-status {
  width: 130rpx;
  height: 165rpx;
  margin: 0 auto;
  margin-top: 41rpx;
}

.status-icon {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.status-title {
  display: block;
  width: 100%;
  height: 45rpx;
  text-align: center;
  line-height: 45tpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #1aad1a;
}

/* 支付信息  */

.middle-info {
  width: 200rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}

.info-shop {
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.info-money {
  width: 200rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  margin-top: 20rpx;
  font-size: 64rpx;
}

/* 支付跳转  */

.bottom-jump {
  width: 384rpx;
  height: 68rpx;
  margin: 0 auto;
  margin-top: 486rpx;
}

.jump-order, .jump-home {
  float: left;
  width: 172rpx;
  height: 68rpx;
  border-radius: 4rpx;
  line-height: 68rpx;
  text-align: center;
}

.jump-order {
  border: 1px solid #333;
}

.jump-home {
  border: 1px solid #ff3670;
  color: #ff3670;
  margin-left: 20rpx;
}
