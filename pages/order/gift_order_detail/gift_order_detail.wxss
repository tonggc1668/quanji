 @import '/pages/order/my_gift/my_gift'; 
.container{
  margin-top:20rpx;
}
.list{
  height: auto;
}
.gift_man_information{
  width:100%;
  height: 140rpx;
  background: #fff;
  display: flex;
}
.gift_man_title{
  height: 33rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color:#777;
  margin-left:30rpx;
  margin-top:42rpx;
}
.gift_man_information>image{
  display: block;
  width:80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-top:30rpx;
  margin-left:60rpx;
}
.gift_man_code_box{
  margin-left:30rpx;
}
.gift_man_code_box>view:nth-child(1){
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top:30rpx;
}
.gift_man_code_box>view:nth-child(2){
  height: 33rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color:#777;
  margin-top:8rpx;
}
.receive_gift_address{
  width:100%;
  height: auto;
  padding:20rpx 30rpx 20rpx 0;
  background: #fff;
  display: flex;
  margin-top:20rpx;
}
.gift_address{
  width:510rpx;
  margin-left:60rpx;
}
.gift_man_phone{
  width:100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.gift_man_phone>text:nth-child(1){
  margin-right:30rpx;
}
.gift_man_phone>text{
  font-size: 28rpx;
}
.gift_address_con{
  width:100%;
  line-height: 33rpx;
  font-size: 24rpx;
  color:#777;
  margin-top:10rpx;
}
.receive_gift_address .gift_man_title{
  height: 100%;
  line-height: 100%;
}
.order_status_box{
  width:100%;
  height: 154rpx;
  padding:30rpx;
  background: #fff;
  margin-top:20rpx;
}
.order_status_list{
  width:100%;
  height: 38rpx;
  line-height: 38rpx;
  margin-bottom:20rpx;
  display: flex;
  justify-content: space-between;
}
.order_status_list:last-child{
  margin-bottom: 0;
}
.order_status_left{
  font-size: 26rpx;
  color:#9B9B9B;
}
.order_status_right{
  display: flex;
  justify-content: flex-end;
}
.order_status_right>view{
  font-size: 26rpx;
  color:#9B9B9B;
}
.order_status_right>image{
  display: block;
  width:24rpx;
  height: 24rpx;
  margin-top:7rpx;
  margin-left:20rpx;
}

.giftDetail {
width: 100%;
margin-top: 30rpx;
font-size: 28rpx;
color: #777;
text-align: center;
}