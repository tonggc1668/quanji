page {
  width: 100%;
  height: 100%;
  background-color: #ededed;
}

.view_root {
  margin-top: 2rpx;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.image_success {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  padding-top: 170rpx;
  display: block;
}

.view_text {
  height: 50rpx;
  width: 100%;
  margin-top: 34rpx;
  font-size: 36rpx;
  color: #1AAD1A;
  text-align: center;
}

.view_change {
  width: 250rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 82rpx auto;
  color: #ff2063;
  font-size: 28rpx;
  border: 1rpx solid #ff2063;
}

.view_bottom {
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #fc0327;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  font-size: 32rpx;
}
