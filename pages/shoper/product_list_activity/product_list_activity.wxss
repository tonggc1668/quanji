.product_list{
  width:100%;
  height:auto;
}
.product_list_banner{
  width:100%;
  height:375rpx;
}
.product_list_banner>image{
  width:100%;
  height:100%;
  display: block;
}
.product_list_con{
  width:100%;
  height:auto;
}
.product_list_title{
  width:100%;
  height:105rpx;
  line-height: 105rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  text-align: center;
}
.product_list_title image{
  width:16rpx;
  height:16rpx;
}
.product_list_title text{
  margin:0 20rpx;
  font-size:32rpx;
}
/* 列表 */
.you_may_like_box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.you_may_like_list {
  width: 350rpx;
   height: 505rpx; 
  /* border: 1px solid #f2f2f2;
  border-radius: 5rpx; */
  overflow: hidden;
  /* margin-bottom: 1px; */
}
.you_may_like_list:nth-child(odd){
  margin-right:10rpx;
}
.you_may_like_list:nth-child(even){
  margin-right: 0;
}

.you_may_like_list>image {
  display: block;
  width: 374rpx;
  height: 374rpx;
}

.you_may_like_name {
  display: block;
  width: 318rpx;
  height: 80rpx;
  line-height: 40rpx;
  margin: 0 auto;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top:16rpx;
  margin-bottom:5rpx;
}
.price_and_sale{
  display: block;
  width:305rpx;
  height:65rpx;
  line-height:50rpx;
  margin:0 auto;
  overflow: hidden;
}
.price_box{
  float: left;
}
.now_price{
  font-size:30rpx;
  color:#FF2063;
}
.prev_price{
  font-size:24rpx;
  color:#CAC9CE;
  margin-left:10rpx;
  text-decoration: line-through;
}
.have_sale{
  float:right;
  font-size:24rpx;
  color:#CAC9CE;
}
.group_buy_num{
  width:305rpx;
  height:60rpx;
  line-height:60rpx;
  margin:0 auto;
}
.group_buy_num image{
  display: block;
  float:left;
  width:100rpx;
  height:40rpx;
  margin-top:10rpx;
}
.group_img_box{
  width:110rpx;
  float:left;
  margin-top:10rpx;
}
.group_img_box image{
  width:40rpx;
  height:40rpx;
  display: block;
  float:left;
  border-radius: 20rpx;
  margin-top:-5rpx;
  margin-left:-10rpx;
}
.group_img_box image:nth-child(1){
  margin-left: 0;
}