/* 专题模块调用组件 */

.special_module_box_many {
  width: 100%;
  height: auto;
}

.special_module_box {
  background: #fff;
  width: 100%;
  /* height: 798rpx; */
  border-bottom:2rpx solid #eaeaea;
  margin-top: 20rpx;
}

.special_module_title {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
position: relative;
}

.moduleTitleText {
  font-size: 30rpx;
  color:#FF2063;
}


.circleImage {
width: 30rpx;
height: 30rpx;
position: absolute;
top: 5rpx;
left: 190rpx;
}

.triangleImage {
width: 40rpx;
height: 40rpx;
position: absolute;
top: 10rpx;
right: 190rpx;
}

.lightingImage {
width: 45rpx;
height: 32rpx;
position: absolute;
top: 56rpx;
left: 385rpx;
}


.special_module_big_img {
  width: 710rpx;
  /* height: 200rpx; */
  margin: 0 auto;
}

.special_module_big_img>image {
  display: block;
  width: 100%;
  height: 200rpx;
}

.special_module_product_box {
  width: 100%;
  /* height: 284rpx; */
  position: relative;
  overflow: hidden;
}

/* 添加滚动提示 */

.swiper_to_slide {
  position: absolute;
  top: 58rpx;
  right: 25rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 999;
}

.swiper_to_slide>image {
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.wonderful_group_box_module {
  width: auto;
    height: 284rpx;
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
}


.wonderful_group_list_module {
  width: 208rpx;
  height: 274rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.wonderful_group_list_module>image {
  display: block;
  width: 198rpx;
  height: 198rpx;
  /* border-radius: 3rpx; */
}

.product_group_price_module {
  width: 81rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 18rpx;
  color: #fff;
  background: #fc0327;
  border-radius: 3rpx;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}

.wonderful_price_box_module {
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
}

.wonderful_price_box_module text:first-child {
  height: 40rpx;
  font-size: 26rpx;
  color: #fc0327;
}

.wonderful_price_box_module text:last-child {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #a6a6a6;
  text-decoration: line-through;
}

.special_product_box {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}

.special_product_list:nth-child(even) {
  width: 374rpx;
  height: 588rpx;
  margin-right: 0;
}

.special_product_list:nth-child(odd) {
  width: 374rpx;
  height: 588rpx;
  margin-right: 3rpx;
}

.special_product_list>image {
  display: block;
  width: 374rpx;
  height: 374rpx;
}

.special_product_name {
  width: 345rpx;
  height: 70rpx;
  line-height: 35rpx;
  margin:0 auto;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top:30rpx;
}
.special_product_price{
  width:345rpx;
  display: flex;
  justify-content: space-between;
  height: 30rpx;
  line-height: 30rpx;
  margin:0 auto;
  color: #CAC9CE;
  margin-top:30rpx;
}
.special_product_price_box>text:nth-child(1){
  font-size:26rpx;
  color:#ff2063;
  font-weight: bold;
}
.special_product_price_box>text:nth-child(2){
  margin-left:7rpx;
  font-size: 24rpx;
  color:#CAC9CE;
  text-decoration: line-through;
}
.special_product_num{
  font-size: 24rpx;
  color:#CAC9CE;
}