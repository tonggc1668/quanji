page {
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: hidden;
}

.real_name_confirm {
  width: 100%;
  height: 100%;
  background: #fff;
}

.real_name_confirm_box {
  width: 100%;
  height: auto;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.real_name_confirm_title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: relative;
  font-size: 24rpx;
  background: #f7f7f7;
}

.real_name_confirm_title>text {
  color: #b2b2b2;
}

.real_name_confirm_title image.left {
  display: block;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 19rpx;
  left: 130rpx;
}

.check_box {
  width: 670rpx;
  height: auto;
  margin: 0 auto;
}

.real_name_box {
  width: 100%;
  height: auto;
}

.real_name_title {
  width: 100%;
  height: 51rpx;
  line-height: 51rpx;
  display: flex;
  font-size: 24rpx;
  color: #333;
  margin-top: 12rpx;
}

.real_name_icon {
  width: 10rpx;
  height: 24rpx;
  background: #fc0327;
  margin-top: 27rpx;
  margin-right: 20rpx;
}

.real_name_input {
  width: 670rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
  display: flex;
  border: 1rpx solid #b2b2b2;
}

.real_name_input>image {
  margin-left: 25rpx;
  width: 32rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 19rpx;
}

.real_name_input input {
  display: block;
  border: 0;
  border-radius: 8rpx;
  width: 533rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.real_name_box:nth-child(2) .real_name_input>image {
  width: 32rpx;
  height: 23rpx;
  margin-right: 11rpx;
  margin-top: 22.5rpx;
}

.real_name_box:nth-child(3) .real_name_input>image {
  width: 20rpx;
  height: 32rpx;
  margin-right: 17rpx;
  margin-top: 18rpx;
}
.real_name_box:nth-child(4) .real_name_input{
  display: flex;
  justify-content: space-between;
  border:0;
}
.real_name_box:nth-child(4) .real_name_input>.real_name_input_box>image {
  width: 29rpx;
  height: 32rpx;
  margin-right: 11rpx;
  margin-top: 18rpx;
  margin-left:25rpx;
}
.real_name_box:nth-child(4) .real_name_input input{
  width:300rpx;
}

.real_name_box:nth-child(4) {
  border: 0;
}

.real_name_box:nth-child(4) .real_name_input_box {
  width: 430rpx;
  height: 68rpx;
  border: 1rpx solid #b2b2b2;
  font-size: 28rpx;
  border-radius: 16rpx;
  display: flex;
}

.text_prompt {
  width: 100%;
  height: 33rpx;
  line-height: 33rpx;
  font-size: 22rpx;
  color: #ff2063;
  margin-top: 15rpx;
}

.real_name_box:nth-child(4) .real_name_input input {
  width: 450rpx;
  float: left;
}

.send_code {
  float: right;
  width: 220rpx;
  height: 68rpx;
  background: #ff2063;
  border-radius: 16rpx;
  line-height: 68rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  margin:0;
}

.send_code_after {
  float: right;
  width: 220rpx;
  height: 68rpx;
  background: #d9d9d9;
  border-radius: 8rpx;
  line-height: 68rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.next_step {
  width: 100%;
  height: 98rpx;
  margin-top: 100rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.next_step button {
  width: 670rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  background: #ff2063;
}
