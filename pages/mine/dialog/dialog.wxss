.view_root{
    height: 1334rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.container {
  width: 100%;
  height: 760rpx;
  background-color: white;
  flex-direction: column;
  position: fixed;
  left: 0;
  bottom: 0;
}

/* 第一部分 */

.view_first {
  width: 100%;
  height: 220rpx;
  display:  flex;
  flex-direction: row;
  position: relative;

}

.home_item_image {
  width: 180rpx;
  height: 180rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  display: block;
  float: left;
}

.view_text {
  float: left;
  margin-top: 130rpx;
}

.view_price {
  font-size: 28rpx;
  color: #fc0327;
  margin-left: 20rpx;
}

.view_size {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.view_size_for{
  border: 1rpx solid #A6A6A6;
  font-size: 24rpx;
  height: 66rpx;
  padding: 0 19rpx;
  margin-top: 20rpx;
  line-height: 66rpx;
  margin-left: 20rpx;
}
.view_size_for_root{
  margin-top: 20rpx;
  display: flex;
  flex-wrap:  wrap;

}
.view_close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.image_close {
  width: 22rpx;
  height: 22rpx;
}

/* 滑动根布局 */
 #view_scroll {
  width: 100%;
  margin-top: 20rpx;
  height:400rpx;
  overflow-y:auto;
  margin-bottom: 120rpx
} 
.view_scroll_box{
  width:100%;
  height:auto;
  
}

/* 第二部分 */

.text_size {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  margin-top: 40rpx;
}

/* 第三部分 */

.text_color {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  margin-top: 40rpx;
}

/* 第四部分 */

.text_num {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  margin-top: 40rpx;
}

/*主容器*/

.stepper {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 320rpx;
  height: 70rpx;
  /*给主容器设一个边框*/
  border: 1rpx solid #ccc;
  border-radius: 3rpx;
}

/*加号和减号*/

.stepper text {
  width: 90rpx;
  line-height: 70rpx;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 125rpx;
  height: 70rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}

/* 第五部分 */

.view_buy {
  width: 100%;
  height: 100rpx;
  background-color: #fc0327;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
}

.text_buy {
  font-size: 32rpx;
  color: white;
}


