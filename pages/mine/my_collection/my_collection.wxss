@import "../../mine/collectionNull/collectionNull.wxss";
/* @import "/pages/shoper/product_list/product_list.wxss"; */
 @import "/pages/shoper/shoper_index/shoper_index.wxss"; 

.container {
  width: 100%;
  height: auto;
  border-top: 1rpx solid #f2f2f2;
  background: #f2f2f2;
  overflow: hidden;
}

.collection_list {
  width: 100%;
  height: 280rpx;
  background: #fff;
  margin-bottom:20rpx;
  /* border-bottom: 20rpx solid #f7f7f7 */
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
  width: 750rpx;
  height: 200rpx;
  margin: 0 auto;
  overflow: hidden;
}

.touch-item:last-child {
  border: 0;
}

.content {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  background: #f7f7f7;
  display: flex;
}

.collection_img {
  width: 120rpx;
  height: 120rpx;
  /* float: left; */
  margin-top: 40rpx;
  margin-left: 40rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.collection_img>image {
  display: block;
  width: 120rpx;
  height: 120rpx;
}

.collection_con_box {
  width: 500rpx;
  padding-left:25rpx;
  margin-top:25rpx;
}

.collection_con {
  width: 500rpx;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
}

.collection_title {
  width: 412rpx;
  height: 70rpx;
  line-height: 35rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.collection_price {
  /* margin-top: 30rpx; */
  font-size: 24rpx;
  line-height: 35rpx;
  height: 35rpx;
}
.sale_num{
  width:100%;
  height: 24rpx;
  color: #CAC9CE;
  margin-top:35rpx;
}
.del {
  width:120rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border:1px solid #CAC9CE;
  line-height: 36rpx;
  color:#CAC9CE;
  font-size: 24rpx;
  text-align: center;
  float:right;
  margin-top:13rpx;
  margin-right: 42rpx;
  margin-bottom: 10rpx
}







.loading {
  padding: 10rpx;
  text-align: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  /* background: url("../../../images/mine/loading.png") no-repeat;   */
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}
